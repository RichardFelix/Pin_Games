{
  "name": "pin_games",
  "productName": "Pin Games",
  "version": "2.0.1",
  "description": "Launch and catalog your games. All in one place.",
  "main": "electron.js",
  "scripts": {
    "start": "electron-forge start",
    "prodStart": "node pin_gamesjs",
    "devStart": "nodemon pin_games.js",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "build-installer": "electron-builder"
  },
  "build": {
    "appId": "com.richardcfelix.pin_games",
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg",
      "icon": "src/public/img/icon/icon.png"
    },
    "linux": {
      "category": "Utility",
      "icon": "src/public/img/icon/icon.png"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "src/public/img/icon/icon.ico"
    },
    "nsis": {
      "installerIcon": "src/public/img/icon/icon.ico",
      "uninstallerIcon": "src/public/img/icon/icon.ico",
      "uninstallDisplayName": "Pin Games",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "author": "Richard C Felix",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.27.2",
    "body-parser": "^1.20.0",
    "electron-squirrel-startup": "^1.0.0",
    "express": "^4.18.1",
    "multer": "^1.4.4",
    "pug": "^3.0.2"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.66",
    "@electron-forge/maker-deb": "^6.0.0-beta.66",
    "@electron-forge/maker-rpm": "^6.0.0-beta.66",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.66",
    "@electron-forge/maker-zip": "^6.0.0-beta.66",
    "electron": "^20.1.3",
    "electron-builder": "^23.3.3"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "pin_games"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
